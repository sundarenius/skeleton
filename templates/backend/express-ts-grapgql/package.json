{
  "name": "@myapp/server",
  "version": "1.0.0",
  "description": "New backend node ts project",
  "author": "",
  "license": "ISC",
  "main": ".dist/bin/www.js",
  "private": true,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node dist/bin/www.js\"",
    "build": "tsc",
    "start:dev": "yarn build && APP_NAME=myapp NODE_ENV=development node dist/bin/www.js",
    "start:test": "yarn build && APP_NAME=myapp NODE_ENV=test node dist/bin/www.js",
    "start:staging": "yarn build && APP_NAME=myapp NODE_ENV=staging node dist/bin/www.js",
    "start:prod": "yarn build && APP_NAME=myapp NODE_ENV=production node dist/bin/www.js",
    "lint:check": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "refresh-local-dbs": "sh -c './drop-all-local-dbs.sh' && node ./refresh-db-dev.js"
  },
  "keywords": [],
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "cli-color": "^2.0.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^16.8.1",
    "http-errors": "^1.8.0",
    "jade": "^1.11.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongodb": "^4.1.3",
    "morgan": "^1.10.0",
    "node-fetch": "2",
    "source-map-support": "^0.5.19",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.0.0",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  }
}
